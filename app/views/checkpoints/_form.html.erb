<%= form_for(@checkpoint) do |f| %>
  <%= f.hidden_field :mission_id %>
  <div class="field">
    <%= f.label :point %><br />
    <%= f.number_field :point %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :latitude %><br />
    <%= f.hidden_field :latitude %>
  </div>
  <div class="field">
    <%= f.label :longitude %><br />
    <%= f.hidden_field :longitude %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
