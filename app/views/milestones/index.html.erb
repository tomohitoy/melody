<h1>Listing milestones</h1>

<table>
  <tr>
    <th>User</th>
    <th>Image</th>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Checkpoint</th>
    <th>Mission</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @milestones.each do |milestone| %>
  <tr>
    <td><%= milestone.user_id %></td>
    <td><%= milestone.image %></td>
    <td><%= milestone.address %></td>
    <td><%= milestone.latitude %></td>
    <td><%= milestone.longitude %></td>
    <td><%= milestone.checkpoint_id %></td>
    <td><%= milestone.mission_id %></td>
    <td><%= link_to 'Show', milestone %></td>
    <td><%= link_to 'Edit', edit_milestone_path(milestone) %></td>
    <td><%= link_to 'Destroy', milestone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

