<div class="container">
    <div class="hero-unit">
        <h1>メロディ</h1>
    </div>

    <div class="row">
        <div class="span12">
            <p><%= link_to '新しいミッションを始める', new_mission_path, :class=>'btn' %></p>
    	</div>
    </div>
    <div class="row">
    	<% @missions.each do |mission|%>  
        <div class="span4">
            <h2><%= mission.title %></h2>
            <p><%= mission.content %></p>
        	<p style="color:red">まだミッションクリアしていません。</p>
            <p><%= link_to 'ミッションを見る', mission, :class=>'btn'%></p>
        </div>
        <% end %>
    </div>
</div>



